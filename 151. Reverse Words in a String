class Solution {
    public String reverseWords(String s) {
         StringBuilder sb = new StringBuilder();
    int i = s.length() - 1;

    while (i >= 0) {
        while (i >= 0 && s.charAt(i) == ' ') i--; // skip spaces
        if (i < 0) break;

        int end = i;
        while (i >= 0 && s.charAt(i) != ' ') i--; // find start of word

        if (sb.length() > 0) sb.append(' '); // add space before next word
        sb.append(s.substring(i + 1, end + 1));
    }
    return sb.toString();
        
    }
}
