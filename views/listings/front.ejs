
    <style>
        body {
            background-color: #0d1a26;
            color: #e0e0e0;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            height: 100vh;
            margin: 0;
            overflow: hidden;
            text-align: center;
        }
        .container {
            position: relative;
            width: 300px;
            height: 300px;
            transform-style: preserve-3d;
            animation: rotateGlobe 30s infinite linear;
            margin-bottom: 2rem;
        }
        .globe {
            width: 100%;
            height: 100%;
            background: radial-gradient(circle at 50% 50%, #4a86e8, #004d99);
            border-radius: 50%;
            box-shadow: 0 0 50px 10px rgba(74, 134, 232, 0.5);
            position: absolute;
            transform: rotateX(-20deg);
        }
        .plane {
            position: absolute;
            width: 50px;
            height: 50px;
            top: 50%;
            left: 50%;
            transform-origin: -150px 0 0;
            animation: revolvePlane 10s infinite linear;
        }
        .plane img {
            width: 100%;
            filter: drop-shadow(0 0 10px rgba(0, 0, 0, 0.5));
        }
        h1 {
            font-size: 3rem;
            margin-bottom: 0.5rem;
            letter-spacing: 2px;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        }
        p {
            font-size: 1.2rem;
            opacity: 0.8;
        }
        @keyframes rotateGlobe {
            from { transform: rotateY(0deg); }
            to { transform: rotateY(360deg); }
        }
        @keyframes revolvePlane {
            from { transform: rotateZ(0deg) translateX(-150px) rotateZ(0deg); }
            to { transform: rotateZ(360deg) translateX(-150px) rotateZ(-360deg); }
        }
    </style>
<% layout("/layouts/boilerplate") %> <!-- ejs-mate layout -->
<body>

    <div class="container">
        <div class="globe"></div>
        <div class="plane">
            <img src="https://www.flaticon.com/svg/static/icons/svg/2507/2507920.svg" alt="Airplane">
        </div>
    </div>

    <h1>Welcome to GlobeTreker</h1>
    <p>Your journey begins here.</p>

</body>
