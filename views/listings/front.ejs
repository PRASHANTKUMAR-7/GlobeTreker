

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Welcome to GlobeTreker</title>
  <style>
    body {
      margin: 0;
      height: 100vh;
      background: linear-gradient(to top right, #87ceeb, #f0f8ff);
      overflow: hidden;
      font-family: Arial, sans-serif;
    }

    /* Hot Air Balloon */
    .balloon {
      position: absolute;
      bottom: -150px;
      left: -150px;
      width: 150px;
      animation: floatBalloon 6s linear forwards;
    }

    @keyframes floatBalloon {
      0% { bottom: -150px; left: -150px; transform: rotate(-5deg);}
      50% { transform: rotate(5deg); }
      100% { bottom: 90%; left: 100%; transform: rotate(-5deg);}
    }

    /* Confetti */
    .confetti {
      position: absolute;
      width: 8px;
      height: 8px;
      border-radius: 50%;
      opacity: 0.9;
      animation: fall 3s linear forwards;
    }

    @keyframes fall {
      0% { transform: translateY(0) rotate(0deg); opacity: 1; }
      100% { transform: translateY(250px) rotate(720deg); opacity: 0; }
    }

    /* Welcome Text */
    .welcome-text {
      position: absolute;
      top: 35%;
      left: 50%;
      transform: translate(-50%, -50%);
      font-size: 3rem;
      font-weight: bold;
      color: #2c3e50;
      opacity: 0;
      text-align: center;
      animation: fadeIn 2s ease-in forwards;
      animation-delay: 6s; /* appear after balloon floats */
    }

    .welcome-text span {
      display: block;
      font-size: 1.5rem;
      margin-top: 0.5rem;
      color: #e67e22;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translate(-50%, -40%); }
      to { opacity: 1; transform: translate(-50%, -50%); }
    }

    /* Globe Button */
  .globe-btn {
    position: absolute;
    bottom: 50px;
    left: 50%;
    transform: translateX(-50%);
    width: 120px;
    height: 120px;
    border-radius: 50%;
    border: none;
    cursor: pointer;
    color: rgb(255, 0, 0);
    font-weight: bold;
    font-size: 1rem;
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    box-shadow: 0 8px 15px rgba(0,0,0,0.3), 0 0 20px rgba(0, 72, 255, 0.6);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    animation: bounce 2s infinite;
}

.globe-btn:hover {
    transform: translateX(-50%) scale(1.15) rotate(-5deg);
    box-shadow: 0 12px 20px rgba(0,0,0,0.4), 0 0 30px rgba(0, 123, 255, 0.9);
}

@keyframes bounce {
    0%, 100% { transform: translateX(-50%) translateY(0); }
    50% { transform: translateX(-50%) translateY(-15px); }
}

.globe-btn::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 130%;
    height: 130%;
    background: rgba(0, 123, 255, 0.3);
    border-radius: 50%;
    transform: translate(-50%, -50%);
    filter: blur(8px);
    opacity: 0;
    animation: pulse 2s infinite;
    pointer-events: none;
}

@keyframes pulse {
    0%, 100% { opacity: 0; transform: translate(-50%, -50%) scale(1); }
    50% { opacity: 1; transform: translate(-50%, -50%) scale(1.3); }
}


  </style>
</head>
<body>
  <!-- Hot Air Balloon -->
  <img src="/plane.png" alt="Hot Air Balloon" class="balloon" id="balloon">

  <div class="welcome-text">
    üéà Welcome to <span style="color:#e67e22; font-size:3rem;">GlobeTreker</span>
    <span>üåø A place to visit Beauty and Nature üåé</span>
  </div>

  <!-- Globe Button -->
  <button class="globe-btn" onclick="window.location.href='/listings'" title="Visit Listings">üåç Explore</button>

  <script>
    const balloon = document.getElementById('balloon');

    balloon.addEventListener('animationstart', () => {
      const interval = setInterval(() => {
        for (let i = 0; i < 6; i++) {  // more confetti
          const confetti = document.createElement('div');
          confetti.classList.add('confetti');
          document.body.appendChild(confetti);

          const colors = ['#ff4757', '#ffa502', '#2ed573', '#1e90ff', '#eccc68', '#ff6b81', '#70a1ff'];
          confetti.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
          
          confetti.style.left = (balloon.offsetLeft + 60 + Math.random() * 40) + "px";
          confetti.style.top = (balloon.offsetTop + 60 + Math.random() * 40) + "px";
          
          confetti.style.animationDuration = (2 + Math.random() * 2) + "s";
          confetti.style.width = confetti.style.height = (6 + Math.random() * 6) + "px";

          setTimeout(() => confetti.remove(), 3500);
        }
      }, 120);

      balloon.addEventListener('animationend', () => clearInterval(interval));
    });
  </script>
</body>
</html>