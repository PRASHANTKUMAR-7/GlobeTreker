
<%layout("/layouts/boilerplate")%>

<div class="row mt-3">
    <h1 class=" animate__animated animate__bounceInDown animate__fast
 col-8 offset-0.5">SignUp on GlobeTreker</h1>
    <div class="col-8 offset-0.5">
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-lable">Username</label>
                    <input name="username" id="username"  placeholder="enter username" type="text" class="form-control" required/> 
                        <!-- required is used to make sure form must contain the tille data  -->
                    <div class="valid-feedback">
                        Looks Good!.
                    </div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-lable">Email</label>
                    <input name="email" id="email"  placeholder="enter email" type="email" class="form-control" required/> 
                        <!-- required is used to make sure form must contain the tille data  -->
            </div>
             <div class="mb-3">
                <label for="password" class="form-lable">Password</label>
                    <input name="password" id="password" placeholder="enter password" type="password" class="form-control" required/> 
                        <!-- required is used to make sure form must contain the tille data  -->
            </div>
            <button class="btn btn-success">SignUp</button>
        </form>
    </div>
</div>
<div class="mt-3 text-center">
        <h5><a href="/login" class="text-warning fw-bold">Already have an account? Login here</a></h5>
</div>