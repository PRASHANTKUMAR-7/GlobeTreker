<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <div class="alert alert-danger col-md-6 offset-md-3" role="alert">
    <h4 class="alert-heading">Error <%= err.statusCode || 500 %></h4>
    <p><%= err.message %></p>

    <% if (err.stack) { %>
      <hr>
      <pre style="white-space: pre-wrap;"><%= err.stack %></pre>
    <% } %>
  </div>
</div>
